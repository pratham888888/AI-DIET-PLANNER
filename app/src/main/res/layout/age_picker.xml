<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    tools:context=".Kotlin.Activities.HomeActivity">-->

    <androidx.cardview.widget.CardView
        android:width="match_parent"
        android:height="wrap_content"
        android:layout_margin="10dp"
        android:card_elevation="10dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp"

        />

    <TextView
        android:id="@+id/age_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Selected age"
        android:text_color="@color/teal_200"
        android:text_size="20dp"

        />
    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_width="100dp"
        app:np_height="35dp"
        app:np_dividerColor="@color/teal_200"
        app:np_formatter="@string/number_picker_formatter"
        app:np_max="100"
        app:np_min="0"
        app:np_selectedTextColor="@color/teal_700"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/black"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_orientation="horizontal"
        app:np_value="3"
        app:np_wrapSelectorWheel="false"
        android:np_wheelItemCount="5"/>



</RelativeLayout>